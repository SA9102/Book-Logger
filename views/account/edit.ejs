<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>

  <body>
    <div class="top">
      <h1><a href="/">BOOK LOGGER</a></h1>
      <nav>
        <a href="/">Home</a>
        <a href="/account">My Account</a>
        <form action="/logout" method="POST">
          <button type="submit" class="button logout">Logout</button>
        </form>
      </nav>
    </div>
    <h2>Edit Account</h2>
    <% if (errorMsg) { %>
    <p class="error-msg"><%= errorMsg %></p>
    <% } %>
    <form
      action="/account/edit/<%= user._id %>?_method=PUT"
      method="POST"
      class="wrapper"
    >
      <div class="form-input">
        <label for="name">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          value="<%= user.name %>"
          class="text-input"
        />
      </div>
      <div class="form-input">
        <label for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          value="<%= user.email %>"
          class="text-input"
        />
      </div>

      <button type="submit" class="button register">Edit</button>
    </form>
    <br />
    <h3>Change Password</h3>
    <form
      action="/account/edit/<%= user._id%>/changepassword?_method=PUT"
      method="POST"
      class="wrapper"
    >
      <div class="form-input">
        <label for="oldpassword">Old Password</label>
        <input
          type="password"
          name="oldpassword"
          id="oldpassword"
          class="text-input"
        />
      </div>
      <div class="form-input">
        <label for="newpassword">New Password</label>
        <input
          type="password"
          name="newpassword"
          id="newpassword"
          class="text-input"
        />
      </div>
      <div class="form-input">
        <label for="conpassword">Confirm New Password</label>
        <input
          type="password"
          name="conpassword"
          id="conpassword"
          class="text-input"
        />
      </div>
      <button type="submit" class="button register">Change Password</button>
    </form>
  </body>
</html>
